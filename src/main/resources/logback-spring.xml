<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <include resource="log-appender.xml" optional="true"/>
    <include file="/home/tomcat/nlpconfig/PachiraContent/log-appender.xml" optional="true"/>

    <!-- 控制台输出，记录所有级别日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%logger{50} %-3L] [%-5level] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <!--<appender-ref ref="STDOUT"/>-->
    </root>

</configuration>